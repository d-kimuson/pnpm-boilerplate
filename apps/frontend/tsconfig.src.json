{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "target": "ES2022"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "**/*.spec.ts", "**/test-utils/**/*"]
}
